@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/VA.png" alt="VA" class="center-block"/>
            <div class="carousel-caption" role="option">
                <p>
                    The Department of Veterans Affairs has tons of resources for veterans.
                    <a class="btn btn-default" href='@Url.Action("Resources", "Home")'>
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/VSOs.jpg" alt="VSOs" class="center-block"/>
            <div class="carousel-caption" role="option">
                <p>
                    There are tons of independent veterans groups helping veterans around the country!
                    <a class="btn btn-default" href='@Url.Action("VSOs", "Home")'>
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/feedback (2).png" alt="Feedback" class="center-block" />
            <div class="carousel-caption" role="option">
                <p>
                    Have any feedback to improve the site?
                    <a class="btn btn-default" href='@Url.Action("Contact", "Home")'>
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="text-center">
        <h2>GREAT, FREE VETERAN RESOURCE WEBSITE</h2>
        <p>VetResource is here to help you transition after military service!</p>
    </div>
    <br />
    <div class="col-md-3">
        <h2>About</h2>
        <a href='@Url.Action("About", "Home")' />
        <img src='@Url.Content("~/images/Military.jpg")' width="150" height="100" />
        <p>Welcome to our page!</p>
    </div>
    <br />
    <div class="col-md-3">
        <h2>Resources</h2>
        <a href='@Url.Action("Resources", "Home")' />
        <img src='@Url.Content("~/images/DAV.jpg")' width="150" height="150" />
        <br />
        <b> Check out our resources!</b>
        <ul>
            <li>
                <div>Commonly used veteran resources</div>
            </li>
        </ul>
    </div>

    <div class="col-md-3">
        <h2>VSOs</h2>
        <a href='@Url.Action("VSOs", "Home")' />
        <img src='@Url.Content("~/images/VSOs.jpg")' width="150" height="150" />
        <ul>
            <li>
                <p>Veterans groups that can advocate for you!</p>
            </li>
        </ul>
    </div>

    <div class="col-md-3">
        <h2>Contact Us &amp; Feedback</h2>
        <a href='@Url.Action("Contact", "Home")' />
        <img src='@Url.Content("~/images/ContactUs.jpg")' width="150" height="150" />
        <ul>
            <li>
                <p>Contact Us</p>
                <p>Feedback</p>
            </li>
        </ul>
    </div>
</div>
